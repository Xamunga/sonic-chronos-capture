
{
  "name": "gravador-realtime-pro",
  "version": "1.0.0",
  "description": "Suíte Profissional de Gravação de Áudio - ALES Sonorização",
  "main": "main.js",
  "author": "ALES Sonorização",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.ales.gravador-realtime-pro",
    "productName": "Gravador Real Time Pro",
    "copyright": "Copyright © 2024 ALES Sonorização",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      {
        "from": "../dist",
        "to": ".",
        "filter": ["**/*"]
      },
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      
      "publisherName": "ALES Sonorização",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gravador Real Time Pro",
      "include": "installer.nsh"
    },
    "publish": {
      "provider": "generic",
      "url": "https://releases.ales-sonorizacao.com/"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
